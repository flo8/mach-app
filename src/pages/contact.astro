---
import ContactForm from "@components/ContactForm.vue";
import IntroLayout from "@layouts/IntroLayout.astro";
---

<IntroLayout>
  <div class="bg-background-base p-4 md:p-6 rounded border border-border-input md:max-w-[600px] mx-2 md:mx-auto mt-6 md:mt-10">
    <h1
      class="mb-4 text-2xl tracking-tight font-extrabold text-text-title lg:mb-8 md:text-4xl"
    >
      Get in touch to <a
        href="mailto:hello@mach10.jp"
        class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600"
        >hello@mach10.jp</a
      > or use the form below
    </h1>
    <ContactForm />
  </div>
</IntroLayout>
