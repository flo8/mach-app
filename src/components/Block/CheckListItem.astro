---
const hasDescription = Astro.slots.description !== undefined
---
<li class="flex space-x-3" class:list={[{'items-center': !hasDescription}]}>
  <svg class="flex-shrink-0 w-5 h-5 text-primary"  class:list={[{'mt-1': hasDescription}]} fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
  {!hasDescription && <span class="text-base font-medium leading-tight text-text-title"><slot name="title" /></span>}
  {hasDescription && (
    <div  class="space-y-2">
      <h3 class="text-xl font-bold text-text-title"><slot name="title" /></h3>
      <div class="mb-2 font-light prose lg:prose-lg"><slot name="description" /></div>
    </div>
  )}
</li>