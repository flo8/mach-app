---
import TitleDescription from '@components/Block/TitleDescription.astro'
import NoTag from '@components/NoTag.astro'

export interface Props {
  classes?: string;
}
const { classes } = Astro.props;
---
<TitleDescription isCentered={true} classes={classes}>
  <NoTag slot="title"><slot name="title" /></NoTag>
  <NoTag slot="description"><slot name="description" /></NoTag>
  <div class="mt-8 lg:mt-12 space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
    <slot />
  </div>
</TitleDescription>