---
import { Picture } from '@astrojs/image/components';
---
<div class="bg-background-base">
    <div class="container grid py-8 mx-auto lg:gap-12 xl:gap-0 lg:py-16 lg:grid-cols-12">
        <div class="mr-auto place-self-center lg:col-span-7 xl:col-span-8">
            <h1 class="text-text-title max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl"><slot name=title></slot></h1>
            <p class="max-w-2xl mb-6 font-light lg:mb-8 md:text-lg lg:text-xl"><slot name="description"></slot></p>
            <slot></slot>
        </div>
        <div class="hidden lg:mt-0 lg:col-span-5 xl:col-span-4 lg:flex items-center">
            <Picture src={import('../../../assets/img/home-hero.jpg')} widths={[406, 812]} sizes="(min-width: 1024px) 406px" alt="succeed">
        </div>                
    </div>
</div>