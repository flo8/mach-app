---
import BaseLayout from './BaseLayout.astro';
import Quiz from '@components/Quiz/Question.vue';

const { title, frontmatter } = Astro.props;
const pageTitle = title || frontmatter?.title;
const props = Astro.props?.frontmatter || Astro.props;
const slug = Astro.url.pathname;
---

<BaseLayout {...props}>
  <div class='max-w-[46.8rem] lg:max-w-[50.9rem] mx-auto px-4 lg:px-8 pb-3 pt-10'>
    <a href={`${import.meta.env.BASE_URL}courses/`} class="link">&larr; Courses</a>
  </div>
  <main class='content-page prose prose-lg lg:prose-xl bg-background-base rounded'>
    <h1>{pageTitle}</h1>
    <slot />
    {frontmatter?.quiz && <Quiz slug={slug} client:only='vue' label={frontmatter.quiz.label} options={frontmatter.quiz.options} />}
  </main>
</BaseLayout>
