{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": [
      "vite/client" // if using vite
    ],
    "paths": {
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@models/*": ["src/models/*"],
      "@stores/*": ["src/stores/*"],
      "@utils/*": ["src/utils/*"],
      "@layouts/*": ["src/layouts/*"],
      "@PageLayout": ["src/layouts/PageLayout.astro"],
      "@Contentlayout": ["src/layouts/ContentLayout.astro"]
    },
    "jsxImportSource": "react"
  }
}
